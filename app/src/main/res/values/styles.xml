<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="SmallListItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="SmallListItemCenter" parent="SmallListItem">
        <item name="android:layout_gravity">center</item>
    </style>

    <color name="colorPrimary">#CCC</color>
    <color name="colorPrimaryBack">#999</color>
    <color name="colorPrimaryDark">#333</color>

</resources>
