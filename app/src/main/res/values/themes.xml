<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/background_floating_material_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ListHeadline" parent="Base.TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="SmallListItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="SmallListItemCenter" parent="SmallListItem">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MediumListItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="spinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="checkboxItemStyle" parent="">
        <item name="colorAccent">@color/textColorPrimary</item>
        <item name="colorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="DrawerSerial" parent="@style/Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>