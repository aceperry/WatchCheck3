<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_material_light"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/result_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/ListHeadline"
        android:text="@string/list_average_deviation"
        android:layout_alignParentBottom="true"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_above="@id/result_footer"
        android:id="@+id/result_table"
        tools:context="de.uhrenbastler.watchcheck.ui.BaseActivity$PlaceholderFragment">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp">

            <TextView
                android:gravity="center_horizontal" android:layout_weight="0.22" android:textAppearance="@style/ListHeadline" android:layout_width="0dp" android:text="@string/list_header_reference"/>
            <TextView
                android:gravity="center_horizontal" android:layout_weight="0.17" android:textAppearance="@style/ListHeadline" android:layout_width="0dp" android:text="@string/list_header_deviation"/>
            <TextView
                android:gravity="center_horizontal" android:layout_weight="0.23" android:textAppearance="@style/ListHeadline" android:layout_width="0dp" android:text="@string/list_header_rate"/>
            <TextView
                android:gravity="center_horizontal" android:layout_weight="0.18" android:textAppearance="@style/ListHeadline" android:layout_width="0dp" android:text="@string/list_header_position"/>
            <TextView
                android:gravity="center_horizontal" android:layout_weight="0.15" android:textAppearance="@style/ListHeadline" android:layout_width="0dp" android:text="@string/list_header_temperature"/>
            <TextView
                android:gravity="center_horizontal" android:layout_weight="0.05" android:textAppearance="@style/ListHeadline" android:layout_width="0dp" android:text=""/>

        </TableRow>

    <ListView
        android:id="@+id/resultListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>
    </TableLayout>

</RelativeLayout>