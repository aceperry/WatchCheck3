<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:stretchColumns="2,3">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/SmallListItemCenter"
            android:id="@+id/result_timestamp_reference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/MediumListItem"
            android:id="@+id/result_offset"
            android:layout_width="0dp"
            android:layout_weight="0.17"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/MediumListItem"
            android:id="@+id/result_deviation_per_day"
            android:layout_width="0dp"
            android:layout_weight="0.23"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/MediumListItem"
            android:id="@+id/result_position"
            android:layout_width="0dp"
            android:layout_weight="0.18"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/MediumListItem"
            android:id="@+id/result_temperature"
            android:layout_weight="0.15"
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:id="@+id/result_info"
            android:src="@drawable/ic_info_black_18dp"
            />

    </TableRow>

</TableLayout>