<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textAppearance="@style/SmallListItemCenter"
        android:id="@+id/result_timestamp_reference"
        android:layout_width="fill_parent"
        android:paddingRight="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textAppearance="@style/SmallListItemCenter"
        android:id="@+id/result_timestamp_watch"
        android:layout_width="fill_parent"
        android:paddingRight="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textAppearance="@style/SmallListItem"
        android:id="@+id/result_offset"
        android:layout_width="50dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textAppearance="@style/SmallListItem"
        android:id="@+id/result_deviation_per_day"
        android:layout_width="50dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content" />

    </TableRow>

</TableLayout>